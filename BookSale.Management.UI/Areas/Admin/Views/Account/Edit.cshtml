@using BookSale.Management.Application.DTOs
@model EditAccountDto
@{
    ViewData["Title"] = "Create Account Form";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form asp-controller="account" asp-action="edit" asp-antiforgery="true"
                        method="post" enctype="multipart/form-data">
    <div class="card">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12 col-lg-6">
                    <div class="row">
                        <div class="col-12">
                            @{
                                <ul class="list-group">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                                    {
                                          <i class="list-group-item text-danger font-italic">@Html.Raw(error.ErrorMessage) </i>
                                    }
                                </ul>
                            }
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="col-12">
                            <div class="form-group">
                                <label for="Username" class="control-label col-form-label">Role <span class="text-danger">*</span></label>
                                @Html.DropDownListFor(x => x.RoleName, (IEnumerable<SelectListItem>) ViewBag.Roles,
                                                "Please Select", new {@class = "form-control"})

                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="Username" class="control-label col-form-label">Username <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" placeholder="Username" asp-for="Username" readonly />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label for="Fullname" class="control-label col-form-label">Fullname <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" placeholder="Fullname" asp-for="Fullname">
                                    <span asp-validation-for="Fullname" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label for="Email" class="control-label col-form-label">Email <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label for="Phone" class="control-label col-form-label">Phone</label>
                                    <input type="text" class="form-control" placeholder="Phone" asp-for="Phone">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label for="MobilePhone" class="control-label col-form-label">Mobile Phone</label>
                                    <input type="text" class="form-control" placeholder="Mobile Phone" asp-for="MobilePhone">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <div class="form-group">
                                    <label for="Address" class="control-label col-form-label">Address</label>
                                    <input type="text" class="form-control" placeholder="Address" asp-for="Address">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <fieldset class="checkbox">
                                        <label>
                                            <input type="checkbox" checked asp-for="IsActive"> Is Active
                                        </label>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Submit</button>
                @Html.ActionLink("Cancel", "Index", "Account", null , new { @class="btn btn-secondary ml-1" })
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}