@model BookSale.Management.Application.DTOs.ViewModels.ExternalLoginModel

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <p id="external-login-description" class="text-info">
                You've successfully authenticated with <strong>@Model.Provider</strong>.
                Please enter an email address for this site below and click the Register button to finish
                logging in.
            </p>

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="ConfirmationExternal" asp-asp-controller="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <input type="text" asp-for="Email" class="form-control" />
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


